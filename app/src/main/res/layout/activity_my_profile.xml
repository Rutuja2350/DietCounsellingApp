<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="391dp"
        android:layout_height="673dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:hint="name"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/pemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="email"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="phone number"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/paddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="address"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="age"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pexpectations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="expectations"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pfinancialStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="financial status"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="gender"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/phealthIssues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="health issues"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pheight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="height"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="weight"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/pmedications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="medications"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Delete"
                android:textSize="25dp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>