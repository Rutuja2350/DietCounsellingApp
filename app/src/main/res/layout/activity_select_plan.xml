<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.selectPlan">

    <TextView
        android:id="@+id/selectPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Select Plan"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/makePayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectPlan"
        app:layout_constraintVertical_bias="0.183">

        <RadioButton
            android:id="@+id/perThousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.1000 per month"
            android:textSize="25dp"
            android:onClick="onRadioButtonClicked3"/>

        <RadioButton
            android:id="@+id/perThreeThousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.2500 per 3 months"
            android:textSize="25dp"
            android:onClick="onRadioButtonClicked3"/>

    </RadioGroup>

    <Button
        android:id="@+id/makePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup3" />

</androidx.constraintlayout.widget.ConstraintLayout>